{
  "name": "params-wizard",
  "version": "1.0.0",
  "description": "A utility package for handling URL query parameters in the browser",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "prepublishOnly": "npm run build",
    "lint": "tsc",
    "test": "jest"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "keywords": [
    "param-wizard",
    "params-wizard",
    "params wizard",
    "query params",
    "param",
    "params",
    "wizard",
    "query parser",
    "url",
    "query",
    "browser",
    "react",
    "javascript",
    "typescript"
  ],
  "author": "Dilip BK",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.2.5",
    "tsup": "^7.2.0",
    "typescript": "^4.9.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dilipbk/params-wizard.git"
  },
  "bugs": {
    "url": "https://github.com/dilipbk/params-wizard/issues"
  },
  "homepage": "https://github.com/dilipbk/params-wizard#readme"
}
