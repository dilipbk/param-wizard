    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsup": "^7.2.0",
    "typescript": "^4.9.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dilipbk/param-wizard.git"
  },
  "bugs": {
    "url": "https://github.com/dilipbk/param-wizard/issues"
  },
